<%= form_for(@project) do |f| %>
  
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :slug %>
    <%= f.text_field :slug %>
  </div>
  
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  
  <div class="field">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, @categories, :id, :name %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
<% end %>