<%= form_for(@page) do |f| %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :slug %>
    <%= f.text_field :slug %>
  </div>
  
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  
  <div class="field">
    <%= f.label :sequence %>
    <%= f.text_field :sequence %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>